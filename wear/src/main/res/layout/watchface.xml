<?xml version="1.0" encoding="utf-8"?>
<com.dlka.wear.watchface.example.widget.Watchface
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watchface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchfaceActivity">

    <ImageView style="@style/GearsWatchLayer"
        android:id="@+id/face"
        android:src="@drawable/watch_bg_normal"/>

    <ImageView style="@style/GearsWatchLayer"
        android:id="@+id/shadow_overlay"
        android:src="@drawable/overlay_shadow_normal"/>

    <ImageView style="@style/GearsWatchLayer.Hand"
        android:id="@+id/hand_hour"
        android:src="@drawable/hand_hour_normal"/>

    <ImageView style="@style/GearsWatchLayer.Hand"
        android:id="@+id/hand_minute"
        android:src="@drawable/hand_minute_normal"/>

    <ImageView style="@style/GearsWatchLayer.Hand"
        android:id="@+id/hand_second"
        android:src="@drawable/hand_second_normal"/>

</com.dlka.wear.watchface.example.widget.Watchface>